			write_error "‚ö†Ô∏è VM '$new_name' already exists. Choose a different name or remove the existing VM."
			sleep 2
			continue
		fi

		if ! virt-clone --original "$template_name" --name "$new_name" --auto-clone; then
			write_error "‚ùå Failed to clone VM '$template_name'"
			return 1
		fi

		write_information "‚úÖ VDI VM '$new_name' created successfully from template '$template_name'"
		sleep 2
		return 0
	done
}


